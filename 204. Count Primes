class Solution {
public:
    int countPrimes(int n) {
        if(n<=2)
        {
            return 0;
        }
        vector<bool>isPrime(n+1,1);
        isPrime[0]=0;
        isPrime[1]=0;
        int count = 0;
        for(int i=2;i<n;i++)
        {
            if(isPrime[i])
            {
                count++;
                for(int j= 2*i;j<=n;j+=i)
                {
                    isPrime[j]=false;
                }
            }
        }
        return count;
    }
};
